<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundBlack"
    tools:context=".Dashboard">
    <ImageView
        android:id="@+id/bg_admin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:src="@drawable/frame_17"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/container_button"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bread_crumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/breadcrumbs_bg"
        android:backgroundTint="#C0C0C0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Hello, Team 1"
        android:fontFamily="@font/poppinsbold"
        android:drawableLeft="@drawable/group"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:drawablePadding="12dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_marginTop="48dp"
        android:id="@+id/container_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/bread_crumb"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chart"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            <LinearLayout
                android:paddingVertical="36dp"
                android:layout_weight="1.8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="18dp"
                        app:cardCornerRadius="5dp"
                        android:layout_height="18dp"
                        android:backgroundTint="@color/electronics"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_marginLeft="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsbold"
                        android:text="Electronics"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="18dp"
                        app:cardCornerRadius="5dp"
                        android:layout_height="18dp"
                        android:backgroundTint="@color/office"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_marginLeft="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsbold"
                        android:text="Office"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="18dp"
                        app:cardCornerRadius="5dp"
                        android:layout_height="18dp"
                        android:backgroundTint="@color/tools"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_marginLeft="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsbold"
                        android:text="Tools"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="18dp"
                        app:cardCornerRadius="5dp"
                        android:layout_height="18dp"
                        android:backgroundTint="@color/kitchen"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_marginLeft="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsbold"
                        android:text="Kitchen"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="18dp"
                        app:cardCornerRadius="5dp"
                        android:layout_height="18dp"
                        android:backgroundTint="@color/medical"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_marginLeft="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsbold"
                        android:text="Medical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="18dp"
                        app:cardCornerRadius="5dp"
                        android:layout_height="18dp"
                        android:backgroundTint="@color/sport"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_marginLeft="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsbold"
                        android:text="Sport"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="18dp"
                        app:cardCornerRadius="5dp"
                        android:layout_height="18dp"
                        android:backgroundTint="@color/clothing"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_marginLeft="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsbold"
                        android:text="Clothing"/>
                </LinearLayout>



            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/container_button"
        android:maxHeight="500dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                app:layout_constraintBottom_toBottomOf="parent"
                android:fontFamily="@font/poppinsbold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:gravity="left"
                android:textSize="18sp"
                android:paddingHorizontal="32dp"
                android:drawablePadding="25dp"
                android:backgroundTint="#FFF6D4"
                android:textColor="@color/black"
                android:paddingVertical="12dp"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/iconamoon_profile_fill"
                android:onClick="toProfile"
                />
            <Button
                app:layout_constraintBottom_toBottomOf="parent"
                android:fontFamily="@font/poppinsbold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Categories"
                android:gravity="left"
                android:textSize="18sp"
                android:paddingHorizontal="32dp"
                android:drawablePadding="25dp"
                android:backgroundTint="#CDF7FF"
                android:textColor="@color/black"
                android:paddingVertical="12dp"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/add"
                android:onClick="toCategories"
                />
            <Button
                app:layout_constraintBottom_toBottomOf="parent"
                android:fontFamily="@font/poppinsbold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search"
                android:gravity="left"
                android:textSize="18sp"
                android:paddingHorizontal="32dp"
                android:drawablePadding="25dp"
                android:backgroundTint="#DBFFD8"
                android:textColor="@color/black"
                android:paddingVertical="12dp"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/loupe"
                android:onClick="toSearch"
                />
            <Button
                android:id="@+id/btn_add"
                app:layout_constraintBottom_toBottomOf="parent"
                android:fontFamily="@font/poppinsbold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add"
                android:gravity="left"
                android:textSize="18sp"
                android:paddingHorizontal="32dp"
                android:drawablePadding="25dp"
                android:backgroundTint="#EFD6FF"
                android:textColor="@color/black"
                android:paddingVertical="12dp"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/plus"
                android:onClick="toAdd"
                />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>